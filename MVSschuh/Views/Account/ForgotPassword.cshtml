@model MVSschuh.View_Model.ForgotPasswordViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/LoginStyle.css" rel="stylesheet" />
    <title>Forgot Password</title>
</head>
<body>
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <div class="fadeIn first">
                <h1>Forgot Password</h1>
            </div>
            <form method="post" asp-controller="Account" asp-action="ForgotPassword">
                <div asp-validation-summary="ModelOnly"></div>
                <div>
                    <label asp-for="Login"></label><br />
                    <input placeholder="Email" class="fadeIn second" asp-for="Login" />
                    <span asp-validation-for="Login"></span>
                </div>
                <div>
                    <input type="submit" value="ForgotPassword" />
                </div>
            </form>

            <!-- Remind Passowrd -->
            <div id="formFooter">
                <a class="underlineHover" asp-controller="Home" asp-action="Index">Go to the Site</a>
            </div>

        </div>
    </div>
</body>
</html>




